<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_design_list_kamar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.kamarcom.Design_list_kamar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/a"
                    android:id="@+id/gambarkamar"/>

                <RelativeLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Kamar"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:id="@+id/namakamar" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Capacity"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_below="@+id/namakamar"
                        android:layout_marginTop="15dp"
                        android:id="@+id/txtcapacity"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Capacity"
                        android:layout_below="@+id/txtcapacity"
                        android:layout_marginRight="40dp"
                        android:id="@+id/capacity"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_below="@+id/namakamar"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="50dp"
                        android:layout_toRightOf="@+id/capacity"
                        android:id="@+id/price"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IDR"
                        android:layout_toRightOf="@+id/capacity"
                        android:layout_below="@+id/price"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/idr" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="price"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_toRightOf="@+id/idr"
                        android:layout_below="@+id/price"
                        android:id="@+id/harga" />

                    </RelativeLayout>

                </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih"
            android:layout_marginTop="5dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:id="@+id/tbnpilih"/>

    </LinearLayout>

</LinearLayout>
